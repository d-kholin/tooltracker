# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=1

# Database Configuration
TOOLTRACKER_DB=tooltracker.db
UPLOAD_FOLDER=static/images

# OIDC Configuration
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret
OIDC_DISCOVERY_URL=https://your-identity-provider/.well-known/openid_configuration
OIDC_ISSUER=https://your-identity-provider
OIDC_SCOPES=openid profile email

# Optional: Custom OIDC endpoints (if not using discovery)
# OIDC_AUTHORIZATION_ENDPOINT=https://your-identity-provider/oauth/authorize
# OIDC_TOKEN_ENDPOINT=https://your-identity-provider/oauth/token
# OIDC_USERINFO_ENDPOINT=https://your-identity-provider/userinfo

# Application Configuration
APP_NAME=Tool Tracker
APP_URL=http://localhost:5000
